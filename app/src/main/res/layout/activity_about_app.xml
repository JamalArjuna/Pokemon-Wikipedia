<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/md_theme_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo_App"
            android:scaleType="centerCrop"
            app:civ_border_width="3dp"
            android:contentDescription="@string/app_name"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WikiPoke"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_onSurface"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvAppVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0"
            android:textSize="14sp"
            android:textColor="@color/md_theme_onSurface"
            android:alpha="0.6"
            android:layout_marginBottom="20dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WikiPoke adalah aplikasi ensiklopedia Pokémon yang berisi informasi lengkap Pokémon termasuk tipe, stats, evolusi, dan data penunjang lainnya."
            android:textSize="15sp"
            android:textColor="@color/md_theme_onSurface"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Developer Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/md_theme_surface"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developer"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <!-- Developer/Name Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama: "
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_onSurface"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jamal Arjuna Dwi Ridwansyah"
                    android:textColor="@color/md_theme_onSurface"/>
            </LinearLayout>

            <!-- Developer/Role Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role: "
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_onSurface"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android Developer"
                    android:textColor="@color/md_theme_onSurface"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Tech Stack Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/md_theme_surface"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tech Stack"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Kotlin"
                android:textColor="@color/md_theme_onSurface"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Retrofit"
                android:textColor="@color/md_theme_onSurface"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- MVVM Architecture"
                android:textColor="@color/md_theme_onSurface"/>
        </LinearLayout>

        <!-- Links Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/md_theme_surface"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Links"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="8dp" />

            <!-- Links/Github Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Github: "
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_onSurface"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="github.com/JamalArjuna/WikiPoke"
                    android:textColor="@color/md_theme_onSurface"/>
            </LinearLayout>

            <!-- Links/Email Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_onSurface"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="arjunaridwansyah@gmail.com"
                    android:textColor="@color/md_theme_onSurface"/>
            </LinearLayout>

            <!-- Links/Privacy Policy Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy &amp; Policy: "
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_onSurface"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wikipoke.app/privacy"
                    android:textColor="@color/md_theme_onSurface"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2025 WikiPoke"
            android:textSize="13sp"
            android:textColor="@color/md_theme_onSurface"
            android:alpha="0.6" />
    </LinearLayout>
</ScrollView>
